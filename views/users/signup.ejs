<% layout("./layouts/boilerplate") %>
<div class="row mt-3">
    <div class="col-6 offset-3">
        <h1 class="col-6 offset-3">SignUp on WanderLust</h1>
        <form action="/signup" method="POST" class="needs-validation" novalidate>
            <div class="mb-3">
                <label for="username" class="form-table">Username</label>
                <input id="username" type="username" name="username" placeholder="Enter a username" class="form-control" required>
                <div class="valid-feedback">Looks good!</div>
            </div>
            <div class="mb-3">
                <label for="email" class="form-table">Email address</address></label>
                <input id="email" type="email" name="email" placeholder="Enter a valid email" class="form-control" required>
            </div>
            <div class="mb-3">
                <label for="password" class="form-table">Password</label>
                <input type="password" id="password" name="password" placeholder="Enter password" class="form-control" required>
            </div>
            <button class="btn btn-success mb-3">SignUp</button>
        </form>
    </div>
</div>